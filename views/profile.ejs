<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.fullname %> - Profile</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>

    <!-- Profile Header Section -->
    <div class="profile-header">
        <img class="cover-photo" src="https://images.unsplash.com/photo-1444703686981-a3abbc4d4fe3?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Cover Photo">
        <div class="profile-pic-container">
            <img class="profile-pic" src="https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Profile Picture">
        </div>
    </div>

    <!-- Profile Info -->
    <div class="profile-info">
        <h1><%= user.fullname %></h1>
        <p class="job-title username"><%="@" + user.username %></p>
        <p class="desc">I am a proficient web developer with 3+ years of experience.</p>
        <div class="profile-social">
            <a href="https://www.linkedin.com/in/prayushadhikari/" target="_blank">LinkedIn</a>
            <a href="https://github.com/adhikareeprayush" target="_blank">GitHub</a>
            <a href="https://dev.to/adhikareeprayush" target="_blank">Blogs</a>
        </div>
        <a href="/logout" class="logout-btn">Logout</a>
    </div>

    <hr class="divider">

    <!-- Upload Form -->
    <form action="/upload" enctype="multipart/form-data" method="post" class="upload-form">
        <input type="text" name="filecaption" placeholder="Caption" required>
        <input type="file" name="file" accept="image/*">
        <input type="submit" class="upload-btn" value="Upload">
    </form>

    <hr class="divider">

    <!-- Posts Section -->
    <div class="post-grid">
        <% user.posts.forEach(function(post) { %>
            <div class="post-card">
                <img src="/images/uploads/<%= post.image %>" alt="Post Image">
                <p class="post-title"><%= post.imageText %></p>
            </div>
        <% }) %>
    </div>

</body>
</html>
